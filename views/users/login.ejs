<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-5">
    <h2 class="text-center mx-auto mb-4 pe-sm-3 pe-md-5" style="max-width: 90%;color: #f74551;;">Login to Wanderlust</h2> 
    <div class="col-10 offset-1 col-md-10 offset-md-1  col-lg-6 offset-md-2 col-sm-10 offset-sm-0">
        <form action="/login"  method="POST" class="needs-validation" novalidate>
            <div class="mb-4">
            <label for="email" class="form-label">Username </label>
            <input
            type="text"
            name="username"
            id="username"
            class="form-control"
            required
            />
            <div class="invalid-feedback">username is required</div>
            </div>

            <div class="mb-4">
            <label for="password" class="form-label">Password </label>
            <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            required
            />
            <div class="invalid-feedback">password is required</div>
            </div>
            
            <button class="btn btn-success" style="background-color: #f74551; border: none; padding: 8px 22px;">Login</button>
        </form>
    </div>
</div>    